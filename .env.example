# Base de données
DATABASE_URL="mysql://user:password@localhost:3306/medecins_patients"

# JWT Secrets (différents par environnement)
JWT_SECRET_DEV="dev_jwt_secret_key_very_long_and_secure"
JWT_SECRET_TEST="test_jwt_secret_key_very_long_and_secure" 
JWT_SECRET_PROD="prod_jwt_secret_key_very_long_and_secure"

# Service SMS (LeTexto)
LETEXTO_API_URL="https://api.letexto.com"
LETEXTO_API_KEY="your_letexto_api_key_here"

# Service de fichiers EXTERNE (optionnel - si microservice disponible)
USE_EXTERNAL_FILES=false  # true pour utiliser le microservice, false pour stockage local
FILES_SERVICE_URL="http://localhost:3005"
FILES_API_KEY="your_external_files_api_key_here"

# Configuration de l'application
BASE_URL="http://localhost:3000"  # URL de base pour générer les liens de fichiers
NODE_ENV="development"  # development, test, production

# Configuration email (si service d'email configuré)
EMAIL_SERVICE_URL="http://localhost:3006"
EMAIL_API_KEY="your_email_api_key_here"